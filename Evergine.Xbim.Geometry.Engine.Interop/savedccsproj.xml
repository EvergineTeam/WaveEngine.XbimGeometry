  <!--We need to execute this after a build to ensure the nuget packages are in the correct place for the c++ binding-->

  <Target Name="BuildNativeCodeEngine" BeforeTargets="Build" Condition="'$(Platform)|$(TargetFramework)'=='AnyCPU|netcoreapp3.1'">
    <Message Text="Building Xbim.Geometry.Engine x32 and x64 Native Dlls. Target Framework: $(TargetFramework)" Importance="High" />
    <MSBuild Projects="..\Evergine.Xbim.Geometry.Engine\Evergine.Xbim.Geometry.Engine.$(TargetFramework).vcxproj" Properties="Configuration=$(Configuration) " Targets="Build">
      <Output TaskParameter="TargetOutputs" ItemName="AssembliesBuiltByChildProjects" />
    </MSBuild>
  </Target>

  <Target Name="BuildNativeCodeEngine" BeforeTargets="Build" Condition="'$(Platform)|$(TargetFramework)'=='AnyCPU|net472'">
    <Message Text="Building Xbim.Geometry.Engine x32 and x64 Native Dlls. Target Framework: $(TargetFramework)" Importance="High" />
    <MSBuild Projects="..\Evergine.Xbim.Geometry.Engine\Evergine.Xbim.Geometry.Engine.$(TargetFramework).vcxproj" Properties="Configuration=$(Configuration) " Targets="Build">
      <Output TaskParameter="TargetOutputs" ItemName="AssembliesBuiltByChildProjects" />
    </MSBuild>
  </Target>

  <Target Name=" CleanNativeCodeEngine" BeforeTargets="Clean" Condition="'$(Platform)'=='AnyCPU'">
    <Message Text="Cleaning Xbim.Geometry.Engine x32 Native Dlls" Importance="High" />
    <MSBuild Projects="$(MSBuildProjectDirectory)\..\Evergine.Xbim.Geometry.Engine\Evergine.Xbim.Geometry.Engine.net472.vcxproj" Properties="Configuration=$(Configuration);Platform=Win32;OutDir=..\Evergine.Xbim.Geometry.Engine.Interop\bin\$(Platform)\$(Configuration)\$(TargetFramework)\" Targets="Clean">
